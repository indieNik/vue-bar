{
  "name": "@indienik/vue-bar-chart",
  "version": "0.0.1",
  "private": false,
  "description": "Simple Bar Chart in Vue.js and HTML5 Canvas",
  "unpkg": "web-components/Vue-Bar.min.js",
  "files": [
    "web-components/"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-wc": "vue-cli-service build && vue build --target wc --name Vue-Bar ./src/components/Bar.vue --dest web-components",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-pwa": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.6.10"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indieNik/vue-bar.git"
  },
  "keywords": [
    "web-components",
    "vue",
    "vue.js",
    "bar-chart",
    "chart",
    "html5",
    "canvas",
    "component"
  ],
  "author": "Nikhil Patil",
  "bugs": {
    "url": "https://github.com/indieNik/vue-bar/issues"
  },
  "homepage": "https://github.com/indieNik/vue-bar#readme",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
